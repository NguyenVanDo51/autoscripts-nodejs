<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>User List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-top: 20px;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background: white;
    }

    thead {
      background-color: #4CAF50;
      color: white;
    }

    th,
    td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      max-width: 400px;
      overflow: hidden;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    td {
      max-width: 100px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      /* Ngăn ngừa xuống dòng */
    }

    a {
      text-decoration: none;
      color: #4CAF50;
    }

    a:hover {
      text-decoration: underline;
    }

    button {
      background-color: #f44336;
      color: white;
      border: none;
      padding: 8px 12px;
      cursor: pointer;
      border-radius: 4px;
    }

    button:hover {
      background-color: #d32f2f;
    }

    .container {
      width: 80%;
      margin: auto;
      padding: 20px;
      background: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>

<body>
  <h1>User List</h1>
  <table>
    <thead>
      <tr>
        <th>Index</th>
        <% Object.keys(users[0]).map((key)=> { %>
          <th>
            <%= key %>
          </th>
          <% })%>
            <th>Proxy</th>
            <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index)=> { %>
        <tr>
          <td><%= index %></td>
          <% Object.values(user).map((key)=> { %>
            <th>
              <%= key %>
            </th>
            <% })%>

              <td>
                <select class="proxy-select" data-username="<%= user.username %>">
                  <option value="">-- Choose Proxy --</option>
                  <% proxyList.forEach(function(proxy) { %>
                    <option value="<%= proxy %>" <%=user.proxy===proxy ? 'selected' : '' %>><%= proxy %>
                    </option>
                    <% }); %>
                </select>
              </td>
              <td>
                <form action="/users/<%= user.username %>" method="POST" style="display:inline;">
                  <button type="submit">Delete</button>
                </form>
              </td>
        </tr>
        <% }) %>


    </tbody>
  </table>

  <script>
    // Lắng nghe sự kiện thay đổi proxy
    document.querySelectorAll('.proxy-select').forEach(select => {
      select.addEventListener('change', function () {
        const selectedProxy = this.value;
        const username = this.getAttribute('data-username');

        if (selectedProxy) {
          // Gọi API để cập nhật proxy
          fetch(`/users/`, {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ username, proxy: selectedProxy }), // Gửi proxy mới
          })
            .then(response => response.json())
            .then(result => {
              console.log(`Proxy updated for ${username}`);
              window.location.reload();
            })
            .catch(error => {
              console.error('Error:', error);
              alert('Error updating proxy');
            });
        }
      });
    });
  </script>
</body>

</html>